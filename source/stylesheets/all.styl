@import 'nib'

.container
  width 960px
  margin-left auto
  margin-right auto

.header
  width 100%
  height 80px

  &-navbar
    .brand
      vertical-align top
      display inline-block
      line-height 80px
      &-cy
        color orange

    .nav
      vertical-align top
      display inline-block
      width 400px
      right 0px
      float right
    .nav > div
      width 80px
      float left
      line-height 72px
      margin-top 5px
      margin-bottom 3px


.welcome
  height 300px

.whats-new

  &-header
    height 25px
  &-title
    width 120px
    height 25px
    line-height 25px
    text-align center
    vertical-align top
    color white
    background-color orange

  &-content
    height 230px
    background-color orange
  &-products
    height 230px
    padding 25px 40px 25px 40px
  &-product
    height 180px
    width 280px
    float left
    &-content
      height 150px
      background-color white
    &-date
      width 120px
      height 30px
      background-color white
      display inline-block
      margin-left auto
      margin-right 0
    &-more
      width 120px
      height 30px
      background-color white
      display inline-block
      margin-left auto
      margin-right 0
  &-product + &-product
    margin-left 20px
  

.contact-header
  background-color white
  height 70px
  h1
    padding 0
    margin 0
    line-height 70px
.contact-content
  height 510px
  background-color orange
.contact-form
  padding-top 20px 
  padding-left 60px 
  padding-right 60px 
  &-field
    border-radius 5px
    background-color white
    width 840px
    height 66px
    margin-bottom 6px
    &-name 
      width 252px
      height 100%
      line-height 66px
      display inline-block
      vertical-align top
      margin-right -4px
      text-align right
      color orange
    &-large
      height 172px
      margin-bottom 16px

    &-value
      width 568px
      height 100%
      display inline-block
      vertical-align top
      padding-left 10px
      input
        border 0px solid orange
        padding 0px
        width 100%
        height 100%
        &:focus
          outline 0
      textarea
        border 0px solid orange
        width 100%
        height 70%
        resize none
        margin-top 21px
        &:focus
          outline 0
  &-submit
    border 3px solid black
    border-radius 5px
    width 200px
    height 66px
    margin-left auto
    margin-right auto
    text-align center
    line-height 66px
    font-size 36px
    &:hover
      cursor pointer

.product-line-header
  background-color white
  height 70px
  line-height 70px
  text-align center
  h1
    padding 0
    margin 0
    color orange
.product-line-product-details
  background-color orange
  height 240px

  &-pic
    width 480px
    height 240px
    vertical-align top
    display inline-block
    margin-right -4px
  &-description
    width 480px
    height 240px
    vertical-align top
    display inline-block
    &-inner
      padding 10px
    &-top
      height 110px
    &-bottom
      height 110px

.product-line-products
  background-color white
  height 400px
        
  &-product
    width 228px
    height 190px
    float left
    margin-top 10px
    margin-right 10px

    &-product-pic
      height 152px
    &-product-detail
      height 37px


.footer
  height 30px
  background-color black

  &-copyright
    line-height 30px
    text-align center
    color white
